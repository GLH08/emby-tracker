# Emby Tracker Nginx 反向代理配置示例
# 
# 使用方法：
# 1. 复制此文件到 /etc/nginx/sites-available/emby-tracker
# 2. 修改 server_name 为你的域名
# 3. 修改 SSL 证书路径
# 4. 创建软链接：ln -s /etc/nginx/sites-available/emby-tracker /etc/nginx/sites-enabled/
# 5. 测试配置：nginx -t
# 6. 重载配置：nginx -s reload
#
# 重要提示：
# - EMBY_URL 环境变量需要设置为浏览器可访问的地址
# - 前端需要直接加载 Emby 的图片资源，所以 Emby 服务器必须对外可访问
# - 如果 Emby 也在反向代理后面，确保两者都能正常访问

# HTTP 重定向到 HTTPS
server {
    listen 80;
    server_name your-domain.com;
    
    # 重定向到 HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS 主配置
server {
    listen 443 ssl http2;
    server_name your-domain.com;

    # ==================== SSL 证书配置 ====================
    ssl_certificate /path/to/your/fullchain.pem;
    ssl_certificate_key /path/to/your/privkey.pem;
    
    # SSL 安全配置
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;

    # ==================== 安全头 ====================
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # ==================== 请求限制 ====================
    # 客户端请求大小限制（用于数据导入功能）
    # 如果需要导入大型备份文件，可以适当增加
    client_max_body_size 50M;

    # ==================== 前端静态资源和页面 ====================
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        
        # 基础代理头
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket 支持（如需实时功能）
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # 禁用缓冲（用于流式响应）
        proxy_buffering off;
        
        # 超时设置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # ==================== API 路由 ====================
    # 单独配置更长超时，用于同步、导入等耗时操作
    location /api/ {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # API 需要更长超时
        # - 同步操作可能需要扫描整个媒体库
        # - 外部评分同步需要多次 API 调用
        # - 数据导入可能处理大量记录
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        
        # 禁用缓冲
        proxy_buffering off;
    }

    # ==================== 健康检查端点 ====================
    # 可用于监控服务状态
    location = /health {
        proxy_pass http://127.0.0.1:3000/api/health;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        
        # 健康检查应该快速响应
        proxy_connect_timeout 5s;
        proxy_read_timeout 5s;
    }

    # ==================== 静态资源缓存（可选） ====================
    # 如果前端资源已经有版本号，可以启用长期缓存
    # location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)$ {
    #     proxy_pass http://127.0.0.1:3000;
    #     proxy_http_version 1.1;
    #     proxy_set_header Host $host;
    #     
    #     # 缓存 7 天
    #     expires 7d;
    #     add_header Cache-Control "public, immutable";
    # }
}

